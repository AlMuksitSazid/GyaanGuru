<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="menuIconColor" format="reference" />

    <style name="Theme.GyaanGuru.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Other light theme customizations -->

        <!-- Override adaptable attributes -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:colorControlHighlight">@color/black</item>
        <item name="android:buttonStyle">@style/MyButtonStyle</item>
    </style>

    <!-- Define a custom button style to fix background -->
    <style name="MyButtonStyle" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:background">@drawable/navy_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:drawableLeft">@drawable/baseline_download_24</item>
        <item name="android:paddingLeft">4sp</item>
        <item name="android:paddingRight">8sp</item>
        <item name="android:paddingTop">4sp</item>
    </style>

</resources>